generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  Snack         Snack[]

  @@map("users")
}

model Snack {
  id          String   @id @default(uuid())
  name        String
  description String?
  date_time   DateTime
  on_diete    Boolean
  created_at  DateTime @default(now())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("snacks")
}
